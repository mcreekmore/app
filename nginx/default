server {
	root /usr/share/nginx/html;
	index index.html index.htm;

	server_name creekmore.io;

	location / {
		try_files $uri $uri/ =404;
    include  /etc/nginx/mime.types
	}

  location /api/ {
      proxy_pass          http://backend:3000/api/;
      proxy_http_version 1.1;
      proxy_set_header    Host             $host;
      proxy_set_header    X-Real-IP        $remote_addr;
      proxy_set_header    X-Forwarded-For  $proxy_add_x_forwarded_for;
      proxy_read_timeout 1800;
      proxy_connect_timeout 1800; 
    }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/creekmore.io/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/creekmore.io/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = creekmore.io) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

	listen 80 default_server;
	listen [::]:80 default_server;

	server_name creekmore.io;
    return 404; # managed by Certbot
}